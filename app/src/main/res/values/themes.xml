<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>

    <style name="Theme.Companion" parent="BaseTheme">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="backgroundGradient">@drawable/gradient_light</item>
        <item name="colorControlNormal">@color/white</item>

        <item name="materialButtonStyle">@style/Widget.Companion.MaterialButton</item>
        <item name="toolbarStyle">@style/Widget.Companion.Toolbar</item>
    </style>

    <style name="Widget.Companion.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?backgroundGradient</item>
    </style>

    <style name="Widget.Companion.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">12dp</item>
        <item name="backgroundTint">@color/blue_700</item>
    </style>
</resources>